<%- include('./partials/header.ejs') %>

<body class="bg-slate-900">
  <main class="flex-col max-w-screen-sm text-center mx-auto">
    <h1 class="text-slate-100 my-12 font-bold text-3xl sm:text-6xl">YungBenn's Todos</h1>
    <div class="flex flex-col items-center">
      <% todos.forEach(todo=> { %>
        <div
          class="card w-full rounded-xl my-5 mx-5 px-6 text-lg flex justify-between items-center max-w-xs sm:max-w-xl">
          <p class="text-slate-100 sm:text-xl text-base"><%= todo.title %></p>
          <div class="flex items-center space-x-2">
            <form
              action="/<%= todo.id %>?_method=DELETE"
              method="POST"
              class="inline-flex">
              <button type="submit">
                <div class="items-center">
                  <svg
                    class="fill-blue-500 hover:fill-blue-700 w-[40px] h-[40px] sm:w-[50px] sm:h-[50px]"
                    viewBox="0 0 24 24"
                    fill=""
                    xmlns="http://www.w3.org/2000/svg">
                    <g id="style=fill">
                      <g id="check-box">
                        <path
                          id="Subtract"
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M8 1.25C4.27208 1.25 1.25 4.27208 1.25 8L1.25 16C1.25 19.7279 4.27208 22.75 8 22.75L16 22.75C19.7279 22.75 22.75 19.7279 22.75 16L22.75 8C22.75 4.27208 19.7279 1.25 16 1.25L8 1.25ZM16.5303 10.0303C16.8232 9.73742 16.8232 9.26255 16.5303 8.96966C16.2374 8.67676 15.7626 8.67676 15.4697 8.96966L10.8434 13.5959C10.7458 13.6935 10.5875 13.6935 10.4899 13.5959L8.53033 11.6363C8.23744 11.3434 7.76256 11.3434 7.46967 11.6363C7.17678 11.9292 7.17678 12.4041 7.46967 12.697L9.42923 14.6565C10.1126 15.34 11.2207 15.34 11.9041 14.6565L16.5303 10.0303Z"
                          fill="" />
                      </g>
                    </g>
                  </svg>
                </div>
              </button>
            </form>
            <a href="/edit/<%= todo.id %> ">
              <svg
                class="fill-amber-500 hover:fill-amber-700 w-[40px] h-[40px] sm:w-[50px] sm:h-[50px]"
                viewBox="0 0 24 24"
                fill=""
                xmlns="http://www.w3.org/2000/svg">
